@using TravelMvc.Models.Siniflar
@model  List<Blog>

@foreach (var item2 in Model)
{
    <div class="right"   >

        <div class="bot-left" style="height:210px" >
            <img  style="height:210px; width:340px" src="@item2.BlogImage" alt="" />
        </div>
        <div class="left-text">

            <h4>@item2.Baslik</h4>
            <span class="doller">@item2.Tarih.ToString("dd:MM:yyyy")</span>
            <p>@item2.Aciklama.Substring(0,80)</p>
            <p><a href="/Blog/BlogDetay/@item2.ID"><span class="read">Devamını Oku >></span></a></p>
        </div>


    </div>

}





